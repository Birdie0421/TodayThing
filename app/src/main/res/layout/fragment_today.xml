<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/current_thing"
        android:background="@color/Primary_color"
        android:layout_alignParentTop="true"
        android:textColor="@color/text_icon"
        android:paddingLeft="@dimen/common_padding_left"
        android:paddingRight="@dimen/common_padding_right"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/text_display"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listView_item_height" />
    <ListView
        android:id="@+id/list"
        android:layout_below="@id/current_thing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/listview_divider_line"
        android:dividerHeight="1dp"/>
    <com.gc.materialdesign.views.ButtonFloatSmall
        android:id="@+id/add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/current_thing"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="16dp"
        android:background="@color/Accent_color"
        materialdesign:iconDrawable="@drawable/ic_add_white_18dp" />
</RelativeLayout>